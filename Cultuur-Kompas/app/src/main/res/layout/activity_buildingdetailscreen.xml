<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/pastelgroen">

    <ImageButton
        android:id="@+id/buildingdetail_return_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/outline_west_black_18dp"
        android:background="@color/gold_tips"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/buildingdetail_name_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Placeholder"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/buildingdetail_return_button"
        app:layout_constraintEnd_toStartOf="@+id/buildingdetail_help_button"
        app:layout_constraintStart_toEndOf="@id/buildingdetail_return_button"
        app:layout_constraintTop_toTopOf="@+id/buildingdetail_return_button" />

    <ImageButton
        android:id="@+id/buildingdetail_help_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:src="@drawable/outline_help_outline_black_18dp"
        android:background="@color/gold_tips"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buildingdetail_image_imageview"
        android:layout_width="175dp"
        android:layout_height="175dp"
        android:layout_margin="40dp"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buildingdetail_name_textview"/>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/buildingdetail_image_imageview"
        app:layout_constraintTop_toTopOf="@+id/buildingdetail_image_imageview" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/pastelgroen"
        android:src="@drawable/outline_volume_up_black_18dp"
        app:layout_constraintBottom_toBottomOf="@+id/buildingdetail_image_imageview"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="@+id/linearLayout"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <CheckBox
        android:id="@+id/buildingdetail_visited_checkbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:scaleX="2"
        android:scaleY="2"
        android:
        app:layout_constraintStart_toStartOf="@+id/buildingdetail_image_imageview"
        app:layout_constraintTop_toBottomOf="@+id/buildingdetail_image_imageview" />

    <TextView
        android:id="@+id/buildingdetail_visited_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="Bezocht"
        android:textColor="@color/black"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/buildingdetail_visited_checkbox"
        app:layout_constraintStart_toEndOf="@+id/buildingdetail_visited_checkbox"
        app:layout_constraintTop_toTopOf="@+id/buildingdetail_visited_checkbox" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginHorizontal="30dp"
        android:background="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/buildingdetail_map_button"
        app:layout_constraintTop_toBottomOf="@+id/buildingdetail_visited_checkbox"
        tools:layout_editor_absoluteX="30dp" />

    <ImageButton
        android:id="@+id/buildingdetail_route_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/gold_tips"
        android:src="@drawable/outline_explore_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/buildingdetail_map_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:background="@color/gold_tips"
        android:src="@drawable/outline_public_black_18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>