<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/iv_routescreen_item"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/tv_routescreen_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="@string/itemRouteTextView1"
        android:textAllCaps="true"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_routescreen_item"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_routescreen_item_info"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/itemRouteTextView2"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/tv_routescreen_item_name"
        app:layout_constraintLeft_toRightOf="@id/iv_routescreen_item"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>